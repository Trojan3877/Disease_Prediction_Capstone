{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Run FastAPI (Uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "src.api.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "jinja": true,
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },

    {
      "name": "Run Training Script",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/training/train.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    },

    {
      "name": "Run Evaluation Script",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/training/evaluate.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    },

    {
      "name": "Debug RAG Inference",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/rag/explain.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    }

  ]
}
